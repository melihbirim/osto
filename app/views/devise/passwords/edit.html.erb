<div class="auth-container">
  <h1>CHANGE PASSWORD</h1>

  <div class="retro-form">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New password" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "retro-input" %>
        <% if @minimum_password_length %>
          <small class="hint-text">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm new password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "retro-input" %>
      </div>

      <%= f.submit "CHANGE PASSWORD", class: "button button-start" %>
    <% end %>

    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>